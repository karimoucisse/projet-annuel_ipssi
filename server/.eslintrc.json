{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base",
        "prettier"
    ],
    "plugins": [
        "prettier"
    ],
    "overrides": [
        {
            "files": [
                "*.js"
            ],
            "extends": [
                "prettier"
            ]
        }
    ],
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "prettier/prettier": "error",
        "no-underscore-dangle": 0,
        "consistent-return": 0,
        "import/no-extraneous-dependencies": 0,
        "import/prefer-default-export": "off",
        "no-await-in-loop": "warn",
        "no-restricted-syntax": "warn",
        "prefer-regex-literals": "off"
    }
}